@page
@model mission_9_CollinYoung.Pages.CartModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - mission_9_CollinYoung</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <h2>Your Cart</h2>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Books</th>
                <th>Quantity</th>
                <th>Cost</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model.basket.Item)
            {
                <tr>
                    <td>@i.Book.Title</td>
                    <td>@i.Quantity</td>
                    <td>@i.Book.Price</td>
                    <td>@(i.Quantity * i.Book.Price)</td>
                    <td class="text-center">
                        <form method="post" asp-page-handler="Remove">
                            <input type="hidden" name="BookId" value="@i.Book.BookId"/>
                            <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                            <button type="submit" class="btn btn-sm btn-dark">Remove</button>
                         </form>
                    </td>
                </tr>
            }
        </tbody>

        <tfoot>
            <tr>
                <td colspan="3">Total:</td>
                <td>@Model.basket.CalculateTotal().ToString("c")</td>
            </tr>
        </tfoot>
    </table>
    <div>
        <a class="btn btn-outline btn-dark" href="@Model.ReturnUrl">Continue Shopping</a>
        <a class="btn btn-outline btn-dark">Checkout</a>
    </div>
</body>
</html>
